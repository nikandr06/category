#sidebar, #left-sidebar, #right-sidebar
{
	padding: 0 0 20px 0;
}
#sidebar, #left-sidebar
{
	border-right: 1px solid #A48F71;
}

#footer
{
	padding: 10px;
	margin: 10px 20px;
	font-size: 0.8em;
	text-align: center;
	border-top: 1px solid #C9E0ED;
}

#logo
{
	padding: 10px 20px;
	background-image:url(img/logo.png);
	background-repeat:no-repeat;
	background-position:left bottom;
	font-size: 200%;
/*	text-shadow: #2C0781 8px 8px 4px;
	filter: Shadow(Color=#2C0781, Direction=135, Strength=8);*/
	/*margin: 0 auto;*/
	position:relative;
/*	top: 38px;*/
/*	margin-top:-25px;*/
	height:100%;
	width:100%;
}
#logo span
{
	/*background-image:url(img/gradient_text.png);
	background-repeat:repeat-x;*/
	background: url("img/gradient_text.png") repeat-x scroll 0 0 transparent;
	width:100%;
	display: block;
    height: 49px;
    position: absolute;
    bottom: 0.1em;
}
#mainmenu
{
/*	background:white url(bg.gif) repeat-x left top;*/
	background:#67ADFA; /*цвет фона кнопки для браузеров без поддержки CSS3*/
	background: -webkit-gradient(linear, left top, left bottom, from(#007AAF), to(#005394)); /* для Webkit браузеров */
	background: -moz-linear-gradient(top,  #007AAF, #005394); /* для Firefox */
	background-image: -o-linear-gradient(top,  #007AAF,  #005394); /* для Opera 11 */
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#007AAF', endColorstr='#005394'); /* фильтр для IE */
	height: 40px;
	padding-bottom: 1px;
}

#mainmenu ul
{
	padding:6px 20px 5px 20px;
	margin:0px;
}

#mainmenu ul li
{
	display: inline;
}

#mainmenu ul li a
{
	color:#ffffff;
	background-color:transparent;
	font-family:Verdana, Geneva, sans-serif;
	font-size:12pt;
	font-weight:bold;
	text-decoration:none;
	display: inline-block;
	padding:5px 8px;
}

#mainmenu ul li a:hover, #mainmenu ul li.active a
{
	color:#009;
	background-color:#C1E0F9;
	text-decoration:none;
}

div.flash-error, div.flash-notice, div.flash-success
{
	padding:.8em;
	margin-bottom:1em;
	border:2px solid #ddd;
}

div.flash-error
{
	background:#FBE3E4;
	color:#8a1f11;
	border-color:#FBC2C4;
}

div.flash-notice
{
	background:#FFF6BF;
	color:#514721;
	border-color:#FFD324;
}

div.flash-success
{
	background:#E6EFC2;
	color:#264409;
	border-color:#C6D880;
}

div.flash-error a
{
	color:#8a1f11;
}

div.flash-notice a
{
	color:#514721;
}

div.flash-success a
{
	color:#264409;
}

div.form .rememberMe label
{
	display: inline;
}

div.view
{
	padding: 10px;
	margin: 10px 0;
	border: 1px solid #C9E0ED;
}

div.breadcrumbs
{
	font-size: 0.9em;
	padding: 5px 20px;
}

div.breadcrumbs span
{
	font-weight: bold;
}

div.search-form
{
	padding: 10px;
	margin: 10px 0;
	background: #eee;
}

.portlet
{
	background-color:#BDD1FF;
	padding: 0;
	margin-bottom:10px;/*	border-radius: 8px;
	-webkit-border-radius:8px;
	-moz-border-radius:8px;
	-khtml-border-radius:8px;*/
}

.portlet-decoration
{
	padding: 3px 8px;
/*	padding:0;*/
	/*background-color:#EFFDFF;*/
	/*color:#5672F5;*/
	/*	background: #B7D6E7;
	border-left: 5px solid #6FACCF;*/
	background:#67ADFA; /*цвет фона кнопки для браузеров без поддержки CSS3*/
	background: -webkit-gradient(linear, left top, left bottom, from(#007AAF), to(#005394)); /* для Webkit браузеров */
	background: -moz-linear-gradient(top,  #007AAF, #005394); /* для Firefox */
	background-image: -o-linear-gradient(top,  #007AAF,  #005394); /* для Opera 11 */
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#007AAF', endColorstr='#005394'); /* фильтр для IE */
}

.portlet-title
{
	font-size: 14pt;
	font-weight: bold;
	padding: 0;
	margin: 0;
	color: #F5F4FF;
}

.portlet-content
{
	font-size:0.9em;
	/*margin: 0 0 15px 0;*/
/*	padding: 5px 8px;*/
	background:#BDD1FF;
}

.portlet-content ul
{
	list-style-image:none;
	list-style-position:outside;
	list-style-type:none;
	margin: 0;
	padding: 0;
}

.portlet-content li
{
	border-bottom: 1px solid #B6B6B6;
}
.portlet-content li a
{
	padding-bottom: 4px;
	padding-left: 8px;
	text-decoration: none;
	display: block;
	padding-top:10px;
	font-size: 12pt;
  /*  height: 30px;*/
/*	line-height: 30px;*/
 /*   padding: 2px 2px 2px 24px;*/
}
.portlet-content li a:hover
{
	text-decoration: underline;
}
.operations
{
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.operations li
{
	padding-bottom: 2px;
}

.operations li a
{
	font: bold 12px Arial;
	color: #0066A4;
	display: block;
	padding: 2px 0 2px 8px;
	line-height: 15px;
	text-decoration: none;
}

.operations li a:visited
{
	color: #0066A4;
}

.operations li a:hover
{
	background: #80CFFF;
}
.post
{
	margin: 0 0 20px;
}

.post .title
{
	font-size: 1.5em;
	border-bottom: 1px solid #C9E0ED;
}

.post .title a
{
	color: #555;
	text-decoration: none;
}

.post .author
{
	color: #888;
	margin: 0 0 5px;
}

.post .nav
{
	-moz-border-radius:7px;
	padding: 5px;
	background-color: #FF9;
}
.post .content
{
	color:#333;
	text-align:justify;
	position:relative;
}

.post .content .readmore
{
	display:block;
	float:right;
	margin-right:20px;
	margin-bottom:20px;
	padding:5px;
	color:#033;
	text-decoration:none;
	border: 1px solid #A87648;
	background:#FDCA44; /*цвет фона кнопки для браузеров без поддержки CSS3*/
	background: -webkit-gradient(linear, left top, left bottom, from(#FDCA44), to(#FF8D02)); /* для Webkit браузеров */
	background: -moz-linear-gradient(top,  #FDCA44, #FF8D02); /* для Firefox */
	background-image: -o-linear-gradient(top,  #FDCA44,  #FF8D02); /* для Opera 11 */
    filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#FDCA44', endColorstr='#FF8D02'); /* фильтр для IE */
	border-radius: 8px;
	-webkit-border-radius:8px;
	-moz-border-radius:8px;
	-khtml-border-radius:8px;
}
.post .content .readmore:hover
{
	text-decoration:underline;
	color:#03C;
}

.comment
{
	-moz-border-radius:7px;
	padding: 10px;
	background: #F5F5F5;
	margin: 5px 0;
}

.comment .content
{
	margin: 10px 0;
}

.comment .author
{
	margin: 5px 0;
	padding: 0 0 3px;
	border-bottom: 1px solid #DDD;
}

.comment .time
{
	color: #888;
	font-size: 0.8em;
}

.comment a.cid
{
	color:#CCC;
	float:right;
	font-size:1.5em;
	font-weight:bold;
	padding:0 5px 5px 5px;
	text-decoration: none;
}

.comment a.cid:hover
{
	color:#555;
}

.comment .pending
{
	color:red;
}
hr#readmore {
	display:none;
}
#rubrics ul {
    margin-left: 5px;
}